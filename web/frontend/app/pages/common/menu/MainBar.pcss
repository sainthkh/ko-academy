@import '../global.pcss';

.main-menu {
	background: $main-bg;
	font-size: 1rem;
	min-height: 2rem;
	@media (--medium) {
		min-height: 4rem;
	}
	display: flex;
	align-items: center;
	border-bottom: 1px solid #9eaff6;
}

.content {
	@mixin flex-center;
	padding: 0 1rem;
}

.logo {
	margin-right: 1rem;
	a {
		text-decoration: none;
		.title {
			color: white;
			margin-left: 0.5rem;
			font-size: 0.8rem;
			@media(--medium) {
				font-size: 1.5rem;
			}
		}
	}
}

.action {
	margin-left: auto;
}